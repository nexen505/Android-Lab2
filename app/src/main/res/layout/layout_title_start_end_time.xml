<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/meeting_title"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="My First Meeting" />

    <TextView
        android:id="@+id/meeting_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Priority" />

    <LinearLayout
        android:id="@+id/meeting_start_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meeting_start_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_time_title"
            tools:text="Start time:" />

        <TextView
            android:id="@+id/meeting_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            tools:text="27-09-1995" />

        <TextView
            android:id="@+id/meeting_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            tools:text="10:00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/meeting_end_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meeting_end_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_time_title"
            tools:text="End time:" />

        <TextView
            android:id="@+id/meeting_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            tools:text="27-09-1995" />

        <TextView
            android:id="@+id/meeting_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            tools:text="10:00" />
    </LinearLayout>

</LinearLayout>